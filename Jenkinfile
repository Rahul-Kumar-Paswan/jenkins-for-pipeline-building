def gv

pipeline{
    agent any
    environment{
        NEW_VERSION = '1.3.0'
    }

    stages {
        stage('Build') {
            steps{
                script{
                    gv.buildApp()
                    echo "This is Build stage"
                }
            }
        }
        stage("Test"){
            steps{
                script{
                    gv.testApp()
                    echo "This is Test stage"
                }
            }
        }
        stage("Deploy"){
            steps{
                script{
                    gv.deployApp()
                        echo "This is Deploy stage"
                }
            }
        }
        stage("Prod"){
            steps{
                script{
                    gv.prodApp()
                        echo "This is Production stage"
                }
            }
        }
    }
    post{
        always{
            echo " testing always "
        }

    }
    
}