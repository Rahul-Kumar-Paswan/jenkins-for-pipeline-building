pipeline{
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage("Build"){
            steps{
                echo "This is Build stage"
            }
        }
        stage("Test"){
            steps{
                echo "This is Test stage"
            }
        }
        stage("Deploy"){
            steps{
                echo "This is Deploy stage"
            }
        }
        stage("Prod"){
            steps{
                echo "This is Prod stage"
            }
        }
    }
    post{
        always{
            echo " testing always "
        }
        success{
            echo " Success always "
        }
        failure{
            echo " Failure always "
        }
    }
    
}